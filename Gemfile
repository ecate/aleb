source 'https://rubygems.org'

gem 'rails', '3.2.1'

# Base de données
gem 'mysql2'


# interface
gem 'jquery-rails'
gem 'execjs'
gem 'therubyracer'

# mise en forme des donnees dans la console ruby
gem 'hirb'


# authentification
gem 'devise'
# système d'authorisation avec roles'
gem 'cancan'

#interfaces d'administration
gem 'activeadmin'

#syntaxe simplifiee pour les vues html
gem 'haml'

#upload / gestion des fichiers
gem "rmagick"
gem 'carrierwave'

#pagination
gem 'kaminari'

#formulaires simplifies
gem 'formtastic'

#import de fichiers excel
gem 'roo'

#web server
gem 'thin'

