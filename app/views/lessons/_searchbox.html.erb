	<%= f.label "Catégorie :" %>
   <%= f.collection_select :syllabus_categorie_name_cont, Categorie.all, :name, :name,:include_blank => true, :prompt => "Choisir une catégorie"  %> 
   
   <%= f.label "Prix. Entre : " %>
   <%= f.text_field :syllabus_prixbase_gteq %>
   <%= f.label "et : "%>
   <%= f.text_field :syllabus_prixbase_lteq %>
   
    <%= f.label "Date :" %>
    <%= f.date_select :horaire_gteq%>
	<%= f.date_select :horaire_lteq%>
   
   <%= %>
  <%= f.submit "Chercher" %>
<% end %>
