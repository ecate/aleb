/* ******************************** */
/*GLOBAL*/
@font-face {
  font-family: 'BirchStd';
  src: url('<%= asset_path('BirchStd.otf') %>');
}


body
{
    width : 100%;
    background: url('/images/body.gif') repeat left top;
    font-family: Arial;
    font-size: 15px;
    margin: 0;
    padding: 0;
}

#main
{
    width: 960px;
    margin: auto;
    overflow: visible;
}

#content
{
    background-color: white !important;

}
/* ******************************** */
/*HEADER*/
#header_global
{
    position: relative;
    height: 150px;
}

#logo
{
    position: absolute;
    top: 0px;
    left: 0px;
    width: 200px;
    height: 200px;
    z-index: 2;
}

.navigation_bar
{
  background: url('/images/menu.png') no-repeat scroll left top transparent;
  height: 64px !important;
  width: 960px;
  position: absolute;
  top: 45px;

}

.navigation_bar ul
{
    margin: 0px;
    padding: 0px 450px 0px 0px;
}

.navigation_bar li
{
    display: inline;
    margin: 0px 20px 0px 0px;
    padding: 0px 35px 0px 0px;
    list-style: none outside none;
    float: left;
    position: relative;
    left: 250px;
    line-height: 64px;
    background: url('/images/nav_marker.png') no-repeat scroll right center transparent;
    font-size: 0.9em;
    color: #000000;
    font-weight: bolder;
}

#last
{
    background: none !important;
}

a, a:link, a:visited
{
    text-decoration: none !important;

}

/* ******************************** */
/* Slider  */

#myCarousel
{
    margin-bottom: 25px;
    width: 960px !important;
    height: 180px;
    overflow: hidden;
    background-color: rgb(52,52,56);

}

.item
{
    padding: 50px 15px 15px 15px;
    text-align: center;
}
.item p
{
    color: #3f7f7f;
    font-size: 2em;
}

.zone-carousel-control > .carousel-control{
    position: absolute;
    top: 43%;
    width: 25px;
    height: 25px;
    margin-top: 70px;
    font-size: 30px;
    line-height: 20px;
    color: rgb(255,255,255);
    text-align: center;
    background: none repeat scroll 0% 0% rgb(34, 34, 34);
    border: 2px solid rgb(255,255,255);
    border-radius: 23px 23px 23px 23px;
    opacity: 0.5;

}
.zone-carousel-control > .carousel-control.left
{
    left: 870px;
}
.zone-carousel-control > .carousel-control.right
{
    left: auto;
    right: 10px;
}


/* ******************************** */
/* Footer  */
.footer-info
{
    background: url('/images/slide_bg.png') repeat-x scroll left top transparent;
    padding:29px 0 24px 0;
    font-size: 12px;
    color: #505050;
    position:relative;
    text-align:center;
    /*margin-top: -10px;*//* shadow bar adjustement */
}

.footer {
	display:block;
}
div.footer ul {
	padding:0;
	margin:0;
}
div.footer ul li {
	list-style-type:none;
	display:inline;
	padding:0 23px 0 0;
	margin:0 15px 0 0;
	background:url('/images/nav_marker.png') no-repeat right center;
}
div.footer ul li:last-child {
	background:none !important;
	padding:0 !important;
	margin:0 !important;
}
div.footer ul li a {
	color:#404040;
	text-decoration:none;
	font-size:13px;
}
div.footer ul li a:hover, div.footer ul li.current-menu-item a {color:#af2330;
}
.footer-info p {
	padding: 8px 0 0 0;
	margin:0;
	font-size: 13px;
	color: #696868;
	line-height:21px;
}
.footer-info p a {
	font-size: 13px;
	color: #696868;
	text-decoration:none;
}

a.top_btn {
	position:absolute;
	right:20px;
	top:34px;
	width:32px;
	height:32px;
	background:url('/images/top_btn.png') no-repeat left top;
	background-position:0 0;
	display:block;
}
a.top_btn:hover {background-position:0 -32px;
}

/* TEST NIVO SLIDER ************************************************************************************************/
.futurico-theme.slider-wrapper {
    position: relative;
    margin-top: 25 px;
    margin-bottom: 40px;

    width: 960px ;
    height: 237px;

    background: #dfdfdf;

    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;

}

.futurico-theme .nivoSlider {
    position: relative;
    width: 960px;
    height: 237px;
}

.futurico-theme .nivoSlider img {
    display: none;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;

}

.futurico-theme .nivo-controlNav {
    position: absolute;
    bottom: 20px;
    left: 475px;
}

.futurico-theme .nivo-controlNav a {
    display: block;
    float: left;
    width: 16px;
    height: 16px;
    margin-right: 5px;
    text-indent: -9999px;

    background: #f6f6f6;

    -webkit-border-radius: 16px;
    -moz-border-radius: 16px;
    border-radius: 16px;

    -webkit-box-shadow: inset 0px 1px 1px rgba(0,0,0, .5), 0px 1px 1px rgba(255,255,255, .05);
    -moz-box-shadow: inset 0px 1px 1px rgba(0,0,0, .5), 0px 1px 1px rgba(255,255,255, .05);
    box-shadow: inset 0px 1px 1px rgba(0,0,0, .5), 0px 1px 1px rgba(255,255,255, .05);
}

.futurico-theme .nivo-controlNav a.active,
.futurico-theme .nivo-caption span {
    background: #27aac6;
    background: -moz-linear-gradient(top,  #27aac6 0%, #4597a9 100%);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#27aac6), color-stop(100%,#4597a9));
    background: -webkit-linear-gradient(top,  #27aac6 0%,#4597a9 100%);
    background: -o-linear-gradient(top,  #27aac6 0%,#4597a9 100%);
    background: -ms-linear-gradient(top,  #27aac6 0%,#4597a9 100%);
    background: linear-gradient(top,  #27aac6 0%,#4597a9 100%);

    -webkit-box-shadow: inset 0px 1px 1px rgba(255,255,255, .4), 0px 1px 1px rgba(0,0,0, .3);
    -moz-box-shadow: inset 0px 1px 1px rgba(255,255,255, .4), 0px 1px 1px rgba(0,0,0, .3);
    box-shadow: inset 0px 1px 1px rgba(255,255,255, .4), 0px 1px 1px rgba(0,0,0, .3);
}

.futurico-theme .nivo-directionNav a {
    display: block;
    top: 60px;

    font-family: 'Consolas', sans-serif;
    font-size: 40px;
    color: #f6f6f6;
    text-shadow: 0px 1px 1px rgba(255,255,255, .05);
}

.futurico-theme a.nivo-prevNav { left: -40px; }

.futurico-theme a.nivo-nextNav { right: -40px; }

